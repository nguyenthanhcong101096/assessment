= render 'shared/alert', message: flash[:alert]

#formCenter.justify-content-center.align-item-center
  = form_with url: user_session_path, method: :post, class: 'login', local: { remote: false } do |form|
    .form-outline.mb-4
      = form.text_field :username, type: 'text', class: 'form-control', required: true, placeholder: 'User name'
      %label.form-label{:for => "username"} User name

    .form-outline.mb-4
      = form.text_field :password, type: 'password', class: 'form-control', required: true, placeholder: 'Password'
      %label.form-label{:for => "password"} Password

    .row.mb-4
      .col
        %a{:href => "#!"} Forgot password?

    %input.btn.btn-primary.btn-block.w-100{:type => "submit", value: 'Sign in'}